---
import { Icon } from "astro-icon/components";
import { profileConfig } from "../config";
import blogStatsData from "../data/blog-stats.json";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import type { BlogStats } from "../types/blog-stats";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();

// 计算网站运行天数
const startDate = new Date("2020-01-01"); // 设置网站开始运行的日期
const today = new Date();
const runningDays = Math.floor(
	(today.getTime() - startDate.getTime()) / (1000 * 60 * 60 * 24),
);

// 从静态数据获取统计信息
const stats: BlogStats = blogStatsData as BlogStats;
const totalWords = stats.totalWords;

// 格式化总字数，超过10万时显示为"XX.X万"格式
const formattedTotalWords =
	totalWords >= 100000
		? `${(totalWords / 10000).toFixed(1)}万`
		: totalWords.toLocaleString("zh-CN");
---

