---
// X平台内容显示组件 - 演示版本
// 包含模拟推文数据，用于展示功能效果

interface Props {
  username?: string;
  maxTweets?: number;
}

const { username = 'Chacat68', maxTweets = 5 } = Astro.props;

// 模拟推文数据
const mockTweets = [
  {
    id: '1',
    content: '今天在咖啡店写代码，用AI帮助开发真的很高效！☕️ #编程 #AI',
    timestamp: '2小时前',
    likes: 12,
    retweets: 3,
    replies: 2
  },
  {
    id: '2', 
    content: '刚刚完成了博客的X平台集成功能，现在可以在"此刻"页面看到我的最新动态了 🎉',
    timestamp: '5小时前',
    likes: 8,
    retweets: 1,
    replies: 4
  },
  {
    id: '3',
    content: '分享一个有趣的发现：Astro框架的组件化开发真的很灵活，可以轻松集成各种第三方服务',
    timestamp: '1天前',
    likes: 15,
    retweets: 5,
    replies: 3
  },
  {
    id: '4',
    content: '周末读完了一本关于Web开发的书，收获很多新的思路和技巧 📚',
    timestamp: '2天前',
    likes: 6,
    retweets: 2,
    replies: 1
  },
  {
    id: '5',
    content: '正在尝试用Svelte重构一些组件，响应式编程的思想真的很棒！',
    timestamp: '3天前',
    likes: 9,
    retweets: 3,
    replies: 2
  }
];

// 限制显示的推文数量
const displayTweets = mockTweets.slice(0, maxTweets);
---

<div class="card-base p-4 mb-6">
  <div class="flex items-center gap-2 mb-4">
    <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    <h3 class="text-lg font-semibold text-black/90 dark:text-white/90">最新动态</h3>
    <span class="text-xs text-neutral-400 ml-auto">@{username}</span>
  </div>
  
  <div class="space-y-4">
    {displayTweets.map(tweet => (
      <div class="border-l-2 border-blue-400/30 pl-4 py-2 hover:border-blue-400/60 transition-colors">
        <div class="text-sm text-black/80 dark:text-white/80 leading-relaxed mb-2">
          {tweet.content}
        </div>
        
        <div class="flex items-center justify-between text-xs text-neutral-500 dark:text-neutral-400">
          <span>{tweet.timestamp}</span>
          
          <div class="flex items-center gap-4">
            <!-- 点赞 -->
            <div class="flex items-center gap-1 hover:text-red-500 transition-colors cursor-pointer">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <span>{tweet.likes}</span>
            </div>
            
            <!-- 转发 -->
            <div class="flex items-center gap-1 hover:text-green-500 transition-colors cursor-pointer">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              <span>{tweet.retweets}</span>
            </div>
            
            <!-- 回复 -->
            <div class="flex items-center gap-1 hover:text-blue-500 transition-colors cursor-pointer">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              <span>{tweet.replies}</span>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- 查看更多链接 -->
  <div class="mt-4 pt-3 border-t border-neutral-200 dark:border-neutral-700">
    <a 
      href={`https://x.com/${username}`} 
      target="_blank" 
      rel="noopener noreferrer"
      class="text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300 text-sm font-medium transition-colors flex items-center gap-1"
    >
      查看更多动态
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
    </a>
  </div>
</div>

<style>
  /* 自定义滚动条样式 */
  .space-y-4 {
    max-height: 400px;
    overflow-y: auto;
  }
  
  .space-y-4::-webkit-scrollbar {
    width: 4px;
  }
  
  .space-y-4::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .space-y-4::-webkit-scrollbar-thumb {
    background: rgba(156, 163, 175, 0.3);
    border-radius: 2px;
  }
  
  .space-y-4::-webkit-scrollbar-thumb:hover {
    background: rgba(156, 163, 175, 0.5);
  }
  
  /* 深色模式下的滚动条 */
  .dark .space-y-4::-webkit-scrollbar-thumb {
    background: rgba(75, 85, 99, 0.3);
  }
  
  .dark .space-y-4::-webkit-scrollbar-thumb:hover {
    background: rgba(75, 85, 99, 0.5);
  }
</style>