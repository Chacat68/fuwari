    text-align: center;
  }
  
  .threads-view-profile {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: opacity 0.2s;
  }
  
  .threads-view-profile:hover {
    opacity: 0.8;
  }
  
  /* å¸–å­æ ·å¼ */
  .threads-post {
