    color: var(--color-text-secondary);
    font-size: 14px;
  }
  
  .threads-post-stat {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .threads-error {
    padding: 20px;
    text-align: center;
    color: var(--color-text-secondary);
  }
  
  .threads-error-title {
